generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  createAt DateTime @default(now())
  role Role
  user User?
  company Company?
}

model User {
  id  Int @id @default(autoincrement())
  auth Auth @relation(fields: [authId], references: [id])
  authId Int @unique
  name String
}

model Company {
  id  Int @id @default(autoincrement())
  auth Auth @relation(fields: [authId], references: [id])
  authId Int @unique
  name String
  description String?
}

enum Role {
  COMPANY
  USER
  ADMIN
}



